@model Category
@{
    ViewBag.Title = "AddCategory";
}

<h2>UpdateCategory</h2>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-body">
         



            @using (Html.BeginForm())
            {

                @Html.HiddenFor(x=>x.CategoryID)

                <div>
                    Kategori İsmi Güncelleyiniz
                </div>
                <div>

                 

                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori İsmi giriniz" })


                </div>
                <div>
                    Kategori Acıklaması Güncelleyiniz
                </div>
                <div>
                   
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                </div>

                <button class="btn btn-primary">
                    Kategori Güncelle
                </button>
            }










        </div>

    </div>
</div>




