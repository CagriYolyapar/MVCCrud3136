@model List<Category>
@{
    ViewBag.Title = "CategoryList";
}


<div>
     <h2> Kategori eklemek icin lütfen @Html.ActionLink("Tıklayınız","AddCategory")   </h2>
</div>

<div class="panel panel-primary">
    <div class="panel panel-body">
        <table class="table table-hover">
            <tr>
                <th>Kategori ID'si</th>
                <th>Kategori İsmi</th>
                <th>Kategori Acıklaması</th>
                <th colspan="2" style="text-align:center">Islemler</th>
            </tr>
            @foreach (Category item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td> @Html.ActionLink("Sil","DeleteCategory",new { id =item.CategoryID },new {@class="btn btn-danger" })        </td>
                    <td> @Html.ActionLink("Güncelle","UpdateCategory",new { id=item.CategoryID},new {@class="btn btn-warning" })            </td>
                </tr>
            }
        </table>
    </div>
</div>

