@model List<Product>
@{
    ViewBag.Title = "ProductList";
}

<h2>ProductList</h2>

<div class="panel panel-primary">
    <div class="panel panel-body">
        <table class="table table-hover">
            <tr>
                <th>Ürün İsmi</th>
                <th>Ürün Fiyatı</th>
                <th>Ürün Stok</th>
                <th colspan="2">İslemler</th>
            </tr>
            @foreach (Product item in Model)
            {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitsInStock</td>
                <td>@Html.ActionLink("Sil", "DeleteProduct", new { id = item.ProductID },new { @class="btn btn-danger"})</td>
                <td>@Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ProductID },new { @class="btn btn-warning"})</td>
            </tr>
            }
        </table>
    </div>
</div>